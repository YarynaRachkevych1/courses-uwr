<%- include('index') %>
<body style="background-color:#1f2626;">
    
    <div class="container-fluid">
        <div class="row">
            <div class="col-xl-2 d-flex">
                <div class="side_menu h-100">
                    <div id="home_logo">
                        <h1>The Best Book Shop</h1>
                    </div>
                    <div id="home_panel">
                        <form method="get" action="/my_acc">
                                <button class="a_button" type="submit">My account</button>
                        </form>
                        <form method="get" action="/my_acc/cart">
                                <button class="a_button" type="submit">My cart</button>
                        </form>
                    </div>
                </div>
            </div>
            <div class="col-xl-10">
                <div class="row mx-3">
                    <% if (products.length > 0) { %>
                        <% products.forEach(product => { %>
                            <div class="col-xl-3">
                                <div class="card text-center px-3 py-5 my-2" style="height: 300px;">
                                    <h3 class="card-title"><%= product.name %></h3>
                                    <div class="card-body">
                                        <p>Price: $<%= product.price %></p>
                                        <p>Author: <%= product.description %></p>
                                        <form method="post" action="/home/add_cart">
                                            <input type="hidden" name="product_name" value="<%= product.name %>">
                                            <button class="btn btn-outline-secondary" type="submit">Add to cart</button>
                                        </form>  
                                    </div>
                                </div>
                            </div>
                        <% }); %>
                      <% } else { %>
                        <p class="product">No products available.</p>
                      <% } %>
            </div>
            </div>
        </div>
    </div>

    </div>
    <script src="/routes/admin/admin_p.js"></script>
</body>
</html>