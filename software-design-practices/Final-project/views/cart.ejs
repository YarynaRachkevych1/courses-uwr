<%- include('index') %>
<body>
    <div id="container">
        <div style="height: 15px;"></div>
        <div id="logo">
            My cart
        </div>
        <div class="centerO">
            <form method="get" action="/my_acc">
                <button class="a_button" type="submit">Return to My Account</button>
            </form> 
        </div>
        <div class="container products">
            <div class="row mx-3">
                <% if (products.length > 0) { %>
                    <% products.forEach((product, index) => { %>
                        <div class="col-xl-3">
                            <div class="card text-center px-3 py-5 mb-3" style="height: 300px;">
                                <h3 class="card-title"><%= product.name %></h3>
                                <div class="card-body">
                                    <p>Price: $<%= product.price %></p>
                                    <p>Description: <%= product.description %></p>
                                    <form method="post" action="/my_acc/del_cart">
                                        <input type="hidden" name="cartItemId" value="<%= cartItemIds[index] %>">
                                        <button class="btn btn-outline-secondary" type="submit">Delete from cart</button>
                                    </form>
                                </div>
                            </div>
                        </div>
                    <% }); %>
                <% } else { %>
                    <p class="product">No products available.</p>
                <% } %>
            </div>
        </div>
        <div>
            <form method="post" action="/my_acc/make_order">
                <button class="a_button">Make an order</button>
            </form>
        </div>
    </div>
    <script src="/routes/admin/admin_p.js"></script>
</body>
</html>
